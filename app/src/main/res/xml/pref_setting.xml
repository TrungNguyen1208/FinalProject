<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:theme="@style/AppTheme.NoActionBar"
        android:title="Hiển thị">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefShowNotifi"
            android:title="Nhận thông báo"
            android:summary="Nhận thông báo khi có địa điểm quán ăn được cập nhật" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/languageLabel"
            android:entryValues="@array/languageValues"
            android:key="prefLanguage"
            android:title="Ngôn ngữ" />

    </PreferenceCategory>

    <PreferenceCategory
        android:theme="@style/AppTheme.NoActionBar"
        android:title="Ứng dụng">

        <Preference
            android:key="preFeedback"
            android:summary="Giúp cho sản phẩn hoàn thiện hơn"
            android:title="Đánh giá" />

        <Preference
            android:summary="Version 1.0.1"
            android:title="Phiên bản" />

        <Preference
            android:summary="Xin gửi lời cảm ơn tất cả các thầy cô trường PTIT đã dạy em trong suốt hơn 4 năm đại học!"
            android:title="Cảm ơn" />
    </PreferenceCategory>
</PreferenceScreen>